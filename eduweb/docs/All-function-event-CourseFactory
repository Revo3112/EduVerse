export function CourseCreatedEvent() {
  const courseCreatedEvent = prepareEvent({
    signature: "event CourseCreated(uint256 indexed courseId, address indexed creator, string creatorName, string title, uint8 category, uint8 difficulty)",
  });
  const { data: events } = useContractEvents({
    contract,
    events: [courseCreatedEvent],
  });
}

