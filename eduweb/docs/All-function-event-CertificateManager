    contract,
    method: "function getCertificate(uint256 tokenId) view returns ((uint256 tokenId, string platformName, string recipientName, address recipientAddress, bool lifetimeFlag, bool isValid, string ipfsCID, string baseRoute, uint256 issuedAt, uint256 lastUpdated, uint256 totalCoursesCompleted, bytes32 paymentReceiptHash, uint256[] completedCourses))",
    params: [tokenId],
  });
}

