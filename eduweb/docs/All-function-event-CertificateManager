export function CertificateMintedEvent() {
  const certificateMintedEvent = prepareEvent({
    signature: "event CertificateMinted(address indexed owner, uint256 indexed tokenId, string recipientName, string ipfsCID, bytes32 paymentReceiptHash, uint256 timestamp)",
  });

  const { data: event } = useContractEvents({
    contract,
    events: [certificateMintedEvent],
  });
}

