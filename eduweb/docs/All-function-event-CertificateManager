import { prepareContractCall } from "thirdweb";
import { useSendTransaction } from "thirdweb/react";
import { useReadContract } from "thirdweb/react";
import { prepareEvent } from "thirdweb";
import { useContractEvents } from "thirdweb/react";

export function MintOrUpdateCertificate() {
  const { mutate: sendTransaction } = useSendTransaction();

  const onClick = () => {
    const transaction = prepareContractCall({
      contract,
      method: "function mintOrUpdateCertificate(uint256 courseId, string recipientName, string ipfsCID, bytes32 paymentReceiptHash, string baseRoute) payable",
      params: [courseId, recipientName, ipfsCID, paymentReceiptHash, baseRoute],
      value: priceInWei,
    });
    sendTransaction(transaction);
  };
}

export function UpdateCertificate() {
  const { mutate: sendTransaction } = useSendTransaction();

  const onClick = () => {
    const transaction = prepareContractCall({
      contract,
      method: "function updateCertificate(uint256 tokenId, string newIpfsCID, bytes32 paymentReceiptHash)",
      params: [tokenId, newIpfsCID, paymentReceiptHash],
    });
    sendTransaction(transaction);
  };
}

